<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
        version="3.0">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.shpandrak.shpanlist.web.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InitDataServlet</servlet-name>
        <servlet-class>com.shpandrak.shpanlist.web.InitDataServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShpanListStartupServlet</servlet-name>
        <servlet-class>com.shpandrak.shpanlist.rest.ShpanlistStartupServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ListUserWebManageServlet</servlet-name>
        <servlet-class>com.shpandrak.shpanlist.web.manage.ListUserWebManageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Jersey Web Application</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>com.shpandrak.shpanlist.rest</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Jersey Web Application</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShpanListStartupServlet</servlet-name>
        <url-pattern>/whoopee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListUserWebManageServlet</servlet-name>
        <url-pattern>/webmanage/listUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/auth/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InitDataServlet</servlet-name>
        <url-pattern>initData</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>